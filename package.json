{
  "name": "hobo-pm",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && cd src/client && next build && cd .. && node ../scripts/copy-storybook-to-dist.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "cy:open": "yarn cypress open",
    "precy:run": "rimraf cypress/screenshots cypress/results cypress/reports",
    "cy:run": "yarn cypress run",
    "report:merge": "mochawesome-merge cypress/results/json/*.json > cypress/results/mochawesome-bundle.json",
    "report:generate": "marge ./cypress/results/mochawesome-bundle.json -o ./cypress/reports/html --inline",
    "report:copy-screenshots": "node ./scripts/copy-screenshots.js",
    "report": "yarn report:merge && yarn report:generate && yarn report:copy-screenshots"
  },
  "workspaces": [
    "src/shared"
  ],
  "dependencies": {
    "@hookform/resolvers": "^2.8.5",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.1.6",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "bootstrap": "^5.1.3",
    "dayjs": "^1.10.7",
    "next": "^12.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.22.5",
    "reactstrap": "^9.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sass": "^1.45.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@storybook/addon-actions": "^6.4.18",
    "@storybook/addon-essentials": "^6.4.18",
    "@storybook/addon-links": "^6.4.18",
    "@storybook/react": "^6.4.18",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/mochawesome": "^6.2.1",
    "@types/node": "^17.0.15",
    "@types/react": "^17.0.38",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-loader": "^8.2.3",
    "cypress": "^9.4.1",
    "cypress-multi-reporters": "^1.5.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-storybook": "^0.5.6",
    "jest": "^27.2.5",
    "jest-dom": "^4.0.0",
    "mocha": "^9.2.0",
    "mochawesome": "^7.0.1",
    "mochawesome-merge": "^4.2.1",
    "next-transpile-modules": "^9.0.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "projects": [
      "src/shared/shared.jest.config.js",
      "src/server/server.jest.config.js",
      "src/client/client.jest.config.js"
    ]
  }
}
